<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvLayout"
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tvuserid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="10sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:shape="ring"
            app:cardBackgroundColor="#80cfcfcf"
            app:cardCornerRadius="50dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/logo"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/list_transsparent"
                android:layout_alignLeft="@id/ivImage"
                android:layout_alignTop="@id/ivImage"
                android:layout_alignRight="@id/ivImage"
                android:layout_alignBottom="@id/ivImage"
                android:text="Name"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/logo"
        app:layout_collapseMode="parallax"

        app:layout_scrollFlags="scroll|enterAlways" />

    <!--app:civ_border_color="@color/colorAccent"
   app:civ_border_width="2dp"-->
    <TextView
        android:id="@+id/tvReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="gone" />



    <TextView
        android:id="@+id/tvName_Slug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:padding="2dp"
        android:text="Name"
        android:visibility="gone"
        android:textColor="#eccb5e"
        android:textSize="13sp"
        />





</RelativeLayout>

