                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:text="loc"

                            android:textColor="#3F3E3E"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/buiness_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lin_loc"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/rlAverageRatingq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp">

                                <ImageView
                                    android:id="@+id/comapnylogo"
                                    android:layout_width="95dp"
                                    android:layout_height="95dp"
                                    android:layout_gravity="center"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txt_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Business name"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatRatingBar
                                    android:id="@+id/rbResto_overall"
                                    style="?attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:isIndicator="true"
                                    android:progressTint="#4ab8d1" />

                                <TextView
                                    android:id="@+id/txt_overall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="OverAll RAting"
                                    android:textColor="#3F3F3F"
                                    android:textSize="11sp" />

                            </LinearLayout>

